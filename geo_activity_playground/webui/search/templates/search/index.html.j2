{% extends "page.html.j2" %}

{% block container %}

<h1 class="row mb-3">Search Results</h1>

<form>
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Kind</label>
        {% for kind in kinds_avail %}
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="kind" value="{{ kind }}" id="kind_{{ kind }}" {% if
                kind in kinds %} checked {% endif %}>
            <label class="form-check-label" for="kind_{{ kind }}">
                {{ kind }}
            </label>
        </div>
        {% endfor %}
    </div>

    <button type="submit" class="btn btn-primary">Search</button>
</form>


<div class="row mb-3">
    <div class="col">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Start</th>
                    <th>Kind</th>
                    <th>Distance</th>
                    <th>Elapsed time</th>
                    <th>Commute</th>
                </tr>
            </thead>
            <tbody>
                {% for activity in activities %}
                <tr>
                    <td><a href="{{ url_for('activity.show', id=activity.id) }}">{{ activity['name'] }}</a></td>
                    <td>{{ activity.start }}</td>
                    <td>{{ activity.kind }}</td>
                    <td>{{ '%.1f' % activity["distance_km"] }} km</td>
                    <td>{{ activity.elapsed_time }}</td>
                    <td>{{ activity.commute }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}