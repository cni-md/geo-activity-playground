{% macro search_form(query, equipments_avail, kinds_avail) %}
<form>
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="{{ query.name }}">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="name_exact" value="true" id="name_exact" {% if
                query.name_exact %} checked {% endif %}>
            <label class="form-check-label" for="name_exact">
                Exact match
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="name_case_sensitive" value="true"
                id="name_case_sensitive" {% if query.name_case_sensitive %} checked {% endif %}>
            <label class="form-check-label" for="name_case_sensitive">
                Case sensitive
            </label>
        </div>
    </div>

    <div class="mb-3">
        <label for="begin" class="form-label">After</label>
        <input type="date" class="form-control" id="start_begin" name="start_begin" value="{{ query.start_begin }}">
        <label for="end" class="form-label">Until</label>
        <input type="date" class="form-control" id="start_end" name="start_end" value="{{ query.start_end }}">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Kind</label>
        {% for kind in kinds_avail %}
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="kind" value="{{ kind }}" id="kind_{{ kind }}" {% if
                kind in query.kind %} checked {% endif %}>
            <label class="form-check-label" for="kind_{{ kind }}">
                {{ kind }}
            </label>
        </div>
        {% endfor %}
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Equipment</label>
        {% for equipment in equipments_avail %}
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="equipment" value="{{ equipment }}"
                id="equipment_{{ equipment }}" {% if equipment in query.equipment %} checked {% endif %}>
            <label class="form-check-label" for="equipment_{{ equipment }}">
                {{ equipment }}
            </label>
        </div>
        {% endfor %}
    </div>

    <button type="submit" class="btn btn-primary">Filter</button>
</form>
{% endmacro %}